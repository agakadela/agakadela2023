---
import { Icon } from 'astro-icon';
import type { TechStackItem } from '~/types';

export interface Props {
  items: Array<TechStackItem>;
}
const { items } = Astro.props;
---

<div class="w-full max-w-6xl space-y-2">
  <div class="relative bg-offset px-6 pt-8 pb-4">
    <ul class="grid grid-cols-2 gap-12 sm:grid-cols-3 md:grid-cols-4">
      {
        items.map((item) => (
          <li>
            <div class="flex flex-col items-center gap-2" href={item.url}>
              <Icon class="h-24" name={item.icon} />
              <span>{item.title}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>
